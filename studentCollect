f=open("Lessons.txt","w")
de = Lesson("101","mat")
de1 = Lesson("102","edb")
LessonList.append(de)
LessonList.append(de1)
for a in range(0,2):

    f.write(LessonList[a].LessonNum)
    f.write("-")
    f.write(LessonList[a].LessonName)
    f.write("\n")
